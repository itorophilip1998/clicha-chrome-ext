{
    "manifest_version": 3,
    "name": "Clisha App",
    "description": "Clisha app extention",
    "version": "0.1",
    "icons": {
         "16": "./images/icon16.png",
           "48": "./images/icon48.png",
          "128": "./images/icon48.png" 
    },
    "content_scripts": [
        {
            "matches": [  "<all_urls>" ], 
            "js": [
                "./scripts/content.js",

                "./scripts/jquery351.js",
                "./scripts/bootstrap461.js"
            ],
            "css": [
                "./styles/bootstrap461.css"
            ]
        }
    ],
    "background":{
        "service_worker":"./scripts/background.js"
    },

    "web_accessible_resources": [
        {
            "matches": [  "<all_urls>" ],
            "resources": [
                "templates/modal1.html",
                "templates/modal2.html",
                "/templates/modal3.html"
            ]
        }
    ],  

    "action": {
        "default_title": "Clisha App",
        "default_icon": "./images/icon.png" ,
        "default_popup":"index.html"
    },


    "host_permissions": [ "<all_urls>"],
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "notifications",
        "contextMenus" 
    ]
}